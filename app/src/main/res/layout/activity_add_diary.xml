<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddDiaryActivity">

    <RelativeLayout
        android:background="#FB8C00"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/button_back_add_diary"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_arrow_left_white"
            android:padding="16dp"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <TextView
            android:id="@+id/text_title_add_diary"
            android:layout_toRightOf="@id/button_back_add_diary"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Add Diary"
            android:fontFamily="@font/spoqa_bold"
            android:gravity="center|left"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <EditText
                android:id="@+id/edit_title_add_diary"
                android:background="@drawable/layout_edit_gray"
                android:hint="제목을 입력하세요."
                android:gravity="center|left"
                android:textColorHint="#73173948"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="56dp"/>
            <View
                android:layout_width="16dp"
                android:layout_height="0dp"/>
            <ImageView
                android:background="@drawable/layout_image_orange"
                android:padding="8dp"
                android:src="@drawable/ic_camera"
                android:layout_width="56dp"
                android:layout_height="56dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edit_content_add_diary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@drawable/layout_edit_gray"
            android:gravity="top|left"
            android:hint="본문을 입력하세요."
            android:padding="16dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/button_temp_add_diary"
                android:fontFamily="@font/spoqa_regular"
                android:layout_weight="1"
                android:text="임시 저장"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/layout_button_orange"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>
            <View
                android:layout_width="16dp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/button_save_add_diary"
                android:fontFamily="@font/spoqa_regular"
                android:layout_weight="1"
                android:text="추가"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/layout_button_green"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>